{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh3/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "shell",
          "style": "powerline",
          "foreground": "#ffffff",
          "background": "transparent",
          "powerline_symbol": "\uE0B0",
          "properties": {
            "mapped_shell_names": {
              "pwsh": "PS"
            }
          }
        },
        {
          "type": "root",
          "style": "powerline",
          "foreground": "#000000",
          "background": "#0000ff",
          "powerline_symbol": "\uE0B0",
          "properties": {
            "style": "full"
          }
        },
        {
          "type": "path",
          "style": "powerline",
          "foreground": "#ffffff",
          "background": "#0000ff",
          "powerline_symbol": "\uE0B0",
          "properties": {
            "style": "full",
            "postfix": " "
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "foreground": "#000000",
          "background": "#D4E157",
          "powerline_symbol": "\uE0B0",
          "properties": {
            "style": "full",
            "prefix": " "
          }
        },
        {
          "type": "exit",
          "style": "plain",
          "foreground": "#D4E157",
          "properties": {
            "prefix": " \u276F",
            "always_enabled": true,
            "error_color": "#FF5252",
            "display_exit_code": false
          }
        }
      ]
    }
  ]
}
